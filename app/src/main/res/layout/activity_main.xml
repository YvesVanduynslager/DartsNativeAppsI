<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary_dark"
    android:paddingLeft="@dimen/recycler_margin_horizontal"
    android:paddingTop="@dimen/recycler_margin_vertical"
    android:paddingRight="@dimen/recycler_margin_horizontal"
    android:paddingBottom="@dimen/recycler_margin_vertical">

    <!-- STATIC ADD OF FRAGMENT
    placing a <fragment> tag inside of the activity layout
    and specifying the type of fragment the class attribute should inflate.
    The view ID of the <fragment> is required by the FragmentManager
    <fragment android:id="@+id/details_fragment"
        class="com.tile.yvesv.nativeappsiproject.RageComicDetailsFragmentent"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />-->


    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabBackground="@color/blue_grey_800_50p"
        app:tabIndicatorColor="@android:color/white"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorGravity="top">

        <android.support.design.widget.TabItem
            android:id="@+id/tab_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ranking" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_players"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Players" />
    </android.support.design.widget.TabLayout>

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout2">

    </LinearLayout>

</android.support.constraint.ConstraintLayout>